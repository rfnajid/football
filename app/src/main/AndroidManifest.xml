<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nnn.footballclub">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".pages.main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".pages.detail.match.MatchDetailActivity" />
        <activity android:name=".pages.detail.player.PlayerDetailActivity" />
        <activity
            android:name=".pages.detail.team.TeamDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".pages.search.SearchActivity"/>
    </application>

</manifest>